<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome to heavenn{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        {% block body %}
        <h1> Les produits :</h1>
        <a href="/ajoutProduit"><button type="button" name="button">Ajouter Produit</button></a>
        <h2>Produits :</h2>
        <table>
          {% for p in produits %}
          <tr>
            <a href="{{ path('produit', {id: p.id}) }}">
            <p>{{ p.nom }}</p>
            </a>
          </tr>
          {% endfor %}
        </table>
        {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
